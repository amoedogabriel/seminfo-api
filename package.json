{
  "name": "seminfo-api",
  "version": "0.1.0",
  "description": "Criação de uma API usando Node com TypeScript para gerenciar os dados da Semana de Informática - IFAM",
  "main": "index.ts",
  "scripts": {
    "start": "node dist/main/server.js",
    "dev": "ts-node src/main/server.ts",
    "build": "tsc --p tsconfig.prod.json",
    "test": "jest --passWithNoTests --runInBand",
    "test:watch": "npm test -- --watch",
    "prepare": "husky install"
  },
  "_moduleAliases": {
    "@data": "dist/data",
    "@domain": "dist/domain",
    "@infra": "dist/infra",
    "@main": "dist/main",
    "@presentation": "dist/presentation",
    "@validation": "dist/validation"
  },
  "author": "Breno Gonzaga",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.15",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "git-commit-msg-linter": "^4.9.4",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "module-alias": "^2.2.2",
    "mongodb": "^5.2.0",
    "validator": "^13.9.0"
  }
}
