{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2022",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "baseUrl": ".",
    "paths": {
      "@data/*": ["src/data/*"],
      "@domain/*": ["src/domain/*"],
      "@infra/*": ["src/infra/*"],
      "@main/*": ["src/main/*"],
      "@presentation/*": ["src/presentation/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
